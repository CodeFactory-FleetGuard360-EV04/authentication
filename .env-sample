# Configuración del servidor
AUTH_PORT=8081

# Configuración de base de datos PostgreSQL
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_password_here
SPRING_DATASOURCE_DATABASE=authentication_db
SPRING_DATASOURCE_PORT=5432
SPRING_DATASOURCE_HOST=localhost
SPRING_DATASOURCE_SCHEMA=public
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/authentication_db

# Configuración JWT
# Clave privada de 256 bits para HMAC256
SECURITY_JWT_KEY_PRIVATE=your-super-secret-jwt-key-of-at-least-64-characters-long-here-12345678
# Usuario/aplicación que genera el token (issuer)
SECURITY_JWT_USER_GENERATOR=FleetGuard360-Auth-Service
# Tiempo de expiración en milisegundos (15 minutos = 900000 ms)
SECURITY_JWT_EXPIRE=900000
